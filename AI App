<body>

  <h2>ðŸ§  Learn AI Terms</h2>
  <input type="text" id="search" placeholder="Search for a term..." oninput="searchTerm()"/>

  <div class="card">
    <div class="term" id="term">Loading...</div>
    <div class="description" id="description">Please wait while we fetch data.</div>
  </div>

  <div>
    <button onclick="showRandomTerm()">ðŸ”€ Random Term</button>
    <button onclick="resetSearch()">Reset</button>
  </div>

  <script>
    const SHEET_ID = 'YOUR_GOOGLE_SHEET_ID_HERE'; // Replace this
    const SHEET_URL = `https://docs.google.com/spreadsheets/d/1Z42XVsCzMgQ0QMw7fh_pcdUoL0b6-tmcNeTEwP27CL4/pubhtml`;

    let terms = [];
    let filteredTerms = [];

    function init() {
      Tabletop.init({
        key: SHEET_URL,
        callback: function(data) {
          terms = data.map(row => ({
            term: row.Term,
            description: row.Description
          }));
          filteredTerms = [...terms];
          showRandomTerm();
        },
        simpleSheet: true
      });
    }

    function showRandomTerm() {
      if (filteredTerms.length === 0) {
        document.getElementById("term").textContent = "No results found";
        document.getElementById("description").textContent = "";
        return;
      }
      const randomIndex = Math.floor(Math.random() * filteredTerms.length);
      const item = filteredTerms[randomIndex];
      document.getElementById("term").textContent = item.term;
      document.getElementById("description").textContent = item.description;
    }

    function searchTerm() {
      const query = document.getElementById("search").value.toLowerCase();
      filteredTerms = terms.filter(t => t.term.toLowerCase().includes(query));
      showRandomTerm();
    }

    function resetSearch() {
      document.getElementById("search").value = '';
      filteredTerms = [...terms];
      showRandomTerm();
    }

    window.addEventListener('DOMContentLoaded', init);
  </script>

</body>
</html>
